---
import { Icon } from "astro-icon/components";
---

<footer class="bg-[#f3f3f3] mt-auto text-xs">
    <div class="w-90 md:w-[45rem] mx-auto flex flex-col justify-evenly gap-1">
        <div class="flex gap-2 mt-6 text-[#999] items-center">
            Powered by
            <div
                class="flex gap-[4px] bg-[#D9D9D9] px-[6px] h-[24px] rounded-full items-center"
            >
                <a
                    href="https://astro.build/"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label="Astro"
                >
                    <Icon
                        name="astro"
                        class="hover:text-blue-500 duration-200 text-base"
                    />
                </a>
                <a
                    href="https://www.netlify.com/"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label="Netlify"
                >
                    <Icon
                        name="netlify"
                        class="hover:text-blue-500 duration-200 text-base"
                    />
                </a>
                <a
                    href="https://www.figma.com/"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label="Figma"
                >
                    <Icon
                        name="figma"
                        class="hover:text-blue-500 duration-200 text-base"
                    />
                </a>
                <a
                    href="https://tailwindcss.com/"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label="Tailwind CSS"
                >
                    <Icon
                        name="tailwind"
                        class="hover:text-blue-500 duration-200 text-base"
                    />
                </a>
            </div>
        </div>
        <div class="flex gap-2">
            <span class="text-[#999]">Inspired by</span><a
                href="https://www.anzifan.com/"
                target="_blank"
                rel="noopener noreferrer"
                class="hover:underline underline-offset-2 duration-200 hover:text-blue-500 text-[#666]"
                >异次元de机智君</a
            >
        </div>
        <div class="flex flex-row justify-between">
            <div class="flex gap-1 items-center group">
                <span class="text-[#999]">
                    Re-designed & Built with <span
                        class="font-mono group-hover:text-red-400 duration-300"
                        >❤</span
                    > by</span
                ><a
                    href="https://github.com/Nin3lee"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="hover:underline underline-offset-2 duration-200 hover:text-blue-500 text-[#666]"
                    >Nin3lee</a
                >
            </div>
            <a
                href="https://nin3lee.github.io/"
                target="_blank"
                rel="noopener noreferrer"
                class="hover:underline underline-offset-2 duration-200 hover:text-blue-500 text-[#666] fill-[#666] flex items-center gap-1"
            >
                <Icon name="hexo" />
                <span>看看旧博客</span>
            </a>
        </div>
        <hr style="border-style: dashed; border-color: #DFE1E6" />
        <div class="flex flex-row justify-between mb-6">
            <div>
                <span class="text-[#999]">Copyright © 2023-2025</span>
                <a
                    href="https://github.com/Nin3lee"
                    class="hover:underline underline-offset-2 duration-200 text-[#666] hover:text-blue-500"
                    >Nin3</a
                >
            </div>
            <a
                href="https://creativecommons.org/licenses/by-nc/4.0/"
                target="_blank"
                rel="noopener noreferrer"
                class="hover:underline underline-offset-2 duration-200 hover:text-blue-500 text-[#666]"
                >CC BY-NC-SA 4.0</a
            >
        </div>
    </div>
</footer>
